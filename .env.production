# Production Environment Variables for Vercel
NODE_ENV=production
PORT=3000

# Supabase Database Configuration
# Replace with your actual Supabase credentials
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Upstash Redis Configuration
# Replace with your actual Upstash credentials
UPSTASH_REDIS_REST_URL=https://[YOUR-ENDPOINT].upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token
REDIS_URL=redis://:[YOUR-PASSWORD]@[YOUR-ENDPOINT].upstash.io:6379

# Security Keys - Generate secure random keys for production
JWT_SECRET=your-very-secure-jwt-secret-key-32-characters-long
SESSION_SECRET=your-very-secure-session-secret-key-32-characters-long
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-32-character-encryption-key-here-exactly

# Application Settings
APP_NAME=Robdius
APP_URL=https://your-app.vercel.app
APP_STAGE=production
ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Email Configuration (Gmail/SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# WhatsApp Gateway Configuration
WHATSAPP_ENABLED=true
WHATSAPP_SESSION_NAME=robdius-session
WHATSAPP_WEBHOOK_URL=https://your-app.vercel.app/api/whatsapp/webhook
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# Payment Gateway Configuration
PAYMENT_GATEWAY_ENABLED=true
PAYMENT_GATEWAY_SECRET=your-payment-secret
PAYMENT_GATEWAY_WEBHOOK_URL=https://your-app.vercel.app/api/payment/webhook

# RADIUS Configuration
RADIUS_ENABLED=true
RADIUS_SECRET=your-radius-secret
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000

# Monitoring
MONITORING_ENABLED=false
SENTRY_DSN=your-sentry-dsn-here

# Cache
CACHE_TTL=3600

# API Configuration
API_PREFIX=/api
